{
  "name": "cloudflare-rrv7-hono-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "db:generate": "drizzle-kit generate",
    "db:migrate-local": "wrangler d1 migrations apply --local DB",
    "db:migrate-production": "wrangler d1 migrations apply DB --remote",
    "build": "react-router build",
    "deploy": "pnpm run build && wrangler deploy",
    "dev": "react-router dev",
    "preview": "pnpm run build && vite preview",
    "typecheck": "pnpm run typegen:cf && react-router typegen && tsc -b && echo \"Types check passed\"",
    "typegen:cf": "wrangler types",
    "lint": "eslint .",
    "lint-and-format:fix": "eslint app server shared --fix && prettier . --write",
    "format": "prettier . --check",
    "format:fix": "prettier . --write"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": "eslint",
    "*.{js,css,md,ts,tsx,jsx}": "prettier --write"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.2",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-router/fs-routes": "^7.8.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "~0.44.5",
    "hono": "^4.9.6",
    "isbot": "^5.1.30",
    "lucide-react": "^0.542.0",
    "next-themes": "^0.4.6",
    "pino": "^9.9.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.8.2",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.12.2",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@react-router/dev": "^7.8.2",
    "@tailwindcss/vite": "^4.1.12",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "commitlint": "^19.8.1",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "~0.31.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "pino-pretty": "^13.1.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.12",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.42.0",
    "vite": "^7.1.4",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.33.2"
  }
